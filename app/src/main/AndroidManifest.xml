<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.taghavi.zaaker">

    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="false"
        android:icon="@drawable/zaker_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/zaker_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.taghavi.zaaker.views.activities.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.taghavi.zaaker.views.activities.DailyMentionsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.taghavi.zaaker.views.activities.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.taghavi.zaaker.views.activities.WelcomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.taghavi.zaaker.views.activities.SalawatCounterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.taghavi.zaaker.views.activities.FatimasMentionsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.taghavi.zaaker.views.activities.ChosenMentionActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>